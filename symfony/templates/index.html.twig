{% extends 'base.html.twig' %}

{% block main %}
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">First name</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i>Last name</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs"aria-hidden="true"></i>Phone number</th>
        </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.firstname }}</td>
                <td>{{ profile.lastname }}</td>
                <td>{{ profile.phonenumber }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Profile was not found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if profiles.haveToPaginate %}
        <div class="pagerfanta text-center">
            {{ pagerfanta(profiles, 'twitter_bootstrap4') }}
        </div>
    {% endif %}
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_post_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> create_post
        </a>
    </div>
    {{ parent() }}
{% endblock %}
